doctype html

html(
  lang='en'
)

  head
    
    meta(
      charset='utf-8'
    )
    
    meta(
      name='viewport'
      content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1'
    )

    meta(
      name='keywords'
      content='{{app.keywords}}'
    )

    meta(
      name='description'
      content='{{app.description}}'
    )

    title {{app.title}}

    link(
      rel='shortcut icon'
      href='/favicon.ico'
    )

    link(
      rel='stylesheet'
      type='text/css'
      href='/public/app.css'
    )
    script.
      CONFIG = {
        app: {
          title: '{{app.title}}',
        },
        gcs: {
          bucket: '{{app.gcs.bucket}}'
        }
      };

  body

    script(
      type='text/javascript'
      src='/public/global/vendor/nprogress.js'
    )
    script.
      NProgress.start();
      NProgress.set(0.4);
  
    script.
      NProgress.done();
    
    script(src='/public/app.js')

